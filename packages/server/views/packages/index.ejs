<%- include('../_header', { title: "Packages" }); %>
    <div>
        <h1 class="font-bold text-2xl">Packages</h1>
        <ul class="my-4 space-y-2">
            <li><a href="/rest/packages/new" class="rounded bg-indigo-200 hover:bg-indigo-300 text-black p-2">+ Add a new package</a></li>
            <% packages.forEach((record) => { %>
                <li><a class="text-indigo-700 hover:text-blue-800 hover:underline" href="/rest/packages/<%= record.id %>"><%= record.humanFriendlyName %></a></li>
            <% }) %>
        </ul>
    </div>
</div>
